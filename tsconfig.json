{
    "compilerOptions": {
      "baseUrl": ".", // Pode ser o diretório raiz do seu projeto
      "paths": {
        "ziggy-js": ["./vendor/tightenco/ziggy"]
      },
      "esModuleInterop": true,
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
    ],
      "module": "ESNext",
      "jsx": "preserve",
      "moduleResolution": "Node",
      "allowJs": true,
    },
    "include": ["resources/ts/**/*"], // Inclua os arquivos que você quer que o TypeScript compile
    "exclude": ["node_modules"] // Exclua os diretórios que você não quer que sejam compilados
  }
  